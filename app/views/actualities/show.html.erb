<% page_title(@actuality.title) %>
<% page_description(@actuality.body) %>
<div class="row-fluid">
  <%= render @actuality %>
  <div class="span12">
    <div class="graybox">
      <p><%= link_to t('.back_to_project'), project_path(@project) %></p>
      <h1><%= @actuality.title %></h1>
      <%= markdown @actuality.body %>
    </div>
  </div>
</div>
<% if can? :manager, @actuality %>
  <%= render 'actualities/form_action',
             project: @actuality.project,
             actuality: @actuality %>
<% end %>
  <div class="row-fluid">
    <div class="span12">
      <%= render partial: 'comments/comment', collection: @project.root_comments,
                 locals: { item: @actuality, new_comment: @comment } %>
      <%= render 'comments/new', comment: @comment, item: @actuality %>
    </div>
  </div>
