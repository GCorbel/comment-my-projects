<div id="new_comment_form_container" class="graybox">
  <h1>Ajouter un commentaire</h1>
  <%= simple_form_for [project, comment], remote: true do |f| %>
    <% if comment.ancestry %>
      <%= f.input :ancestry,
                  input_html: { value: comment.parent_id },
                  as: :hidden %>
    <% end %>
    <%= f.input :username, required: true unless signed_in? %>
    <% if comment.is_root? %>
      <%= f.association :category,
                        collection: project.categories,
                        required: true %>
    <% end %>
    <%= f.input :message, as: :markdown %>
    <%= f.button :submit, 'Envoyer' %>
  <% end %>
</div>
