comment_partial = '<%= escape_javascript(
  render(@comment,
         project: @project,
         new_path: new_project_comment_path(@project, ancestry: @comment),
         destroy_path: project_comment_path(@project, @comment))
) %>'
<% if @comment.parent %>
  $("#answer_<%= @comment.parent.id %>").html(comment_partial);
<% else %>
  $("#new_root_comment").before(comment_partial);
<% end %>
