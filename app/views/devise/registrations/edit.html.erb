<h2>Modifier mon compte</h2>
<br/>
<%= simple_form_for(resource, 
                    as: resource_name,
                    url: registration_path(resource_name),
                    html: { method: :put }) do |f| %>
  <%= f.input :username %>
  <%= f.input :email %>
  <%= f.input :password %>
  <%= f.input :password_confirmation %>
  <%= f.input :current_password %>
  <%= f.button :submit %>
<% end %>

