<div class="row-fluid">
  <div class="span9">
    <div class="graybox">
      <%= raw(t('.description')) %>
    </div>
  </div>
  <div class="span3">
    <div class="graybox">
      <h2><%= t('.top') %></h2>
      <% ProjectPresenter.top(5).each do |project| %>
        <p>
          <%= link_to project, project_path(project) %>
          (<%= (project.sum_notes.to_f / project.nb_notes.to_f).round(1) %>/4
          - <%= project.nb_notes %>)
        </p>
      <% end %>
    </div>
    <div class="graybox">
      <h3><%= t('.top_user_projects') %></h3>
      <ol>
        <% UserPresenter.top_project(5).each do |user| %>
          <li>
            <%= user.username %>
            -
            <%= pluralize(user.nb_projects, t("activerecord.attributes.models.project").downcase) %>
          </li>
        <% end %>
      </ol>
    </div>
  </div>
</div>
