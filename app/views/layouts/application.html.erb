<!DOCTYPE html>
<html>
  <head>
    <title>Comment My Projects</title>
    <%= stylesheet_link_tag    "application", :media => "all" %>
    <%= javascript_include_tag "application" %>
    <%= csrf_meta_tags %>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
  </head>
  <body>
    <div class="navbar navbar-fixed-top">
      <div class="navbar-inner">
        <div class="container">
          <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </a>
          <%= link_to "Comment My Projects", root_path, class: "brand" %>
          <div class="nav-collapse">
            <ul class="nav">
              <li><%= link_to "Liste des projets", projects_path %></li>
              <li><%= link_to "Ajouter un projet", new_project_path %></li>
            </ul>
            <%= form_for SearchDecorator.new_project(params[:search]),
                          as: :search,
                          url: projects_path,
                          html: { class: "navbar-search pull-left" }, 
                          method: :get,
                          wrapper: :small do |f| %>
              <%= f.text_field :title,
                               class:'search-query',
                               placeholder: 'Search' %>
              <%= f.button :submit if ENV['RAILS_ENV'] == "test" %>
            <% end %>
            <ul class='nav pull-right'>
              <li class='dropdown'>
                <a data-toggle="dropdown" class="dropdown-toggle" href="#"><i class="icon-user"></i>Utilisateur<b class="caret"></b></a>
                <ul class="dropdown-menu">
                  <% if user_signed_in? %>
                    <li><%= link_to "Deconnexion", destroy_user_session_path, method: :delete %></li>
                    <li><%= link_to "Modifier", edit_user_registration_path(current_user) %></li>
                    <li><%= link_to "Supprimer", registration_path(:user), confirm: "Êtes vous sûr?", method: :delete %></li>
                  <% else %>
                    <li><%= link_to "Inscription", new_user_registration_path %></li>
                    <li><%= link_to "Connexion", new_user_session_path %></li>
                  <% end %>
                </ul>
              </li>
            </ul>
          </div>
        </div>
      </div>
    </div>
    <div class="container">
      <div data-pjax-container>
        <%= alert_box("success", flash[:notice]) %>
        <%= alert_box("error", flash[:error]) %>
        <%= alert_box("alert", flash[:alert]) %>
        <%= yield %>
      </div>
    </div>
  </body>
</html>
