<div class="row-fluid">
  <div class="span12">
    <div class="graybox">
      <% cache project do %>
        <%= project_title_for(project) %>
        <div id="tag_list">
          <%= raw(tags_for(project)) %>
        </div>
        <hr/>
        <%= markdown(project.description) %>
      <% end %>
      <% if current_user %>
        <hr/>
        <div id="project_user_follower_link_container">
          <% if current_user.follow?(project) %>
            <%= render 'project_user_followers/link_unfollow',
                       project: project %>
          <% else %>
            <%= render 'project_user_followers/link_follow',
                       project: project %>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
</div>
