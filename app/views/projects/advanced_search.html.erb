<div class="row-fluid">
  <div class="span12">
    <div class="graybox">
      <%= simple_form_for @search,
                          url: {action: :advanced_search},
                          method: :get do |f| %>
        <%= f.input :text, label: t('.advanced_search'), required: false %>
        <%= f.input :project_type,
                    collection: ProjectType.all,
                    label: t('.type'),
                    required: false,
                    include_blank: "Tout les langage" %>
        <%= f.input :category,
                    collection: Search::PROJECT_CATEGORIES,
                    label: t('.search_for'),
                    required: false,
                    include_blank: false %>
        <%= f.button :submit, 'Go!' %>
      <% end %>
    </div>
  </div>
</div>

<% if @projects %>
  <div class="row-fluid">
    <div class="span12">
      <div class="graybox">
        <% @projects.each do |project| %>
          <h1><%= project.title %></h1>
          <%= excerpt_for(project, @search.text) %>
        <% end %>
      </div>
    </div>
  </div>
<% else %>
  <div class="row-fluid">
    <div class="span12">
      <div class="graybox">
        <%= t('.no_result') %>test123aaaaaa
      </div>
    </div>
  </div>
<% end %>
