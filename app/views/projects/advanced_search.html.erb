<div class="row-fluid">
  <div class="span12">
    <div class="graybox">
      <%= simple_form_for @search,
                          url: {action: :advanced_search},
                          method: :get do |f| %>
        <%= f.input :text, label: t('.advanced_search'), required: false %>
        <%= f.input :project_type,
                    collection: ProjectType.all,
                    label: t('.type'),
                    required: false,
                    include_blank: "Tout les langage" %>
        <%= f.input :category,
                    collection: Search::PROJECT_CATEGORIES,
                    label: t('.search_for'),
                    required: false,
                    include_blank: false %>
        <%= f.button :submit, 'Go!' %>
      <% end %>
    </div>
  </div>
</div>

<% if @projects %>
  <% @projects.each do |project| %>
    <div class="row-fluid">
      <div class="span12">
        <div class="graybox">
            <h1><%= link_to project, project %></h1>
            <%= highlight(excerpt_for(project, @search.text), @search.text) %>
        </div>
      </div>
    </div>
  <% end %>
<% else %>
  <div class="row-fluid">
    <div class="span12">
      <div class="graybox">
        <%= t('.no_result') %>
      </div>
    </div>
  </div>
<% end %>
