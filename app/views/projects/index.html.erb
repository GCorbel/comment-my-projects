<% content_for(:javascripts) do %>
  $(document).ready(function() {
    partial = '<%= escape_javascript(
      render('project_type_search')
    ) %>'
    $('#projects_filter').append(partial);
    $('#project_type').on('change', function () {
      $('#projects').dataTable().fnDraw();
    })
  });
<% end %>
<table id="projects"
       class="table table-striped table-bordered"
       data-source="<%= projects_url(format: "json")%>">
  <thead>
    <tr>
      <th><%= t('.title') %></th>
      <th><%= t('.url') %></th>
      <th><%= t('.type') %></th>
    </tr>
  </thead>
  <tbody>
  </tbody>
</table>
