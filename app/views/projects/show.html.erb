<% page_title(@project) %>
<div id="project">
  <div class="row-fluid">
    <div class="span12">
      <div class="graybox">
        <%= project_title_for(@project) %>
        <%= render 'projects/nav_tabs' %>
        <div class="tab-content">
          <%= render @project.category_projects, project: @project %>
        </div>
        <% if current_user %>
          <div id="project_user_follower_link_container">
            <% if current_user.follow?(@project) %>
              <%= render 'project_user_followers/link_unfollow',
                         project: @project %>
            <% else %>
              <%= render 'project_user_followers/link_follow',
                         project: @project %>
            <% end %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
  <div class="row-fluid">
    <% if can? :manage, @project %>
      <%= render 'projects/form_action', project: @project %>
    <% end %>
  </div>
  <div class="row-fluid">
    <div class="span3">
      <% if @project.actualities.any? %>
        <div class="graybox">
          <h2><%= t('.list_actuality') %></h2>
          <% @project.actualities.each do |actuality| %>
            <p>
              <%= link_to actuality.title,
                          project_actuality_path(@project, actuality) %>
              -
              <%= actuality.created_at.strftime('%d/%m/%Y %H:%M') %>
            </p>
          <% end %>
        </div>
      <% end %>
      <%= render 'notes/index', project: @project %>
      <%= render 'notes/new',
                 project: @project,
                 note: @note %>
    </div>
    <div class="span9">
      <%= render @project.root_comments, project: @project %>
      <%= render 'comments/new', comment: @comment, project: @project %>
    </div>
  </div>
</div>
