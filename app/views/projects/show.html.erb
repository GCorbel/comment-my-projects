<% page_title(@project) %>
<% page_description(@project.description) %>
<div id="project">
  <div class="row-fluid">
    <div class="span12">
      <div class="graybox">
        <%= project_title_for(@project) %>
        <div id="tag_list">
          <%= raw(tags_for(@project)) %>
        </div>
        <hr/>
        <%= markdown(@project.description) %>
        <% if current_user %>
          <hr/>
          <div id="project_user_follower_link_container">
            <% if current_user.follow?(@project) %>
              <%= render 'project_user_followers/link_unfollow',
                         project: @project %>
            <% else %>
              <%= render 'project_user_followers/link_follow',
                         project: @project %>
            <% end %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
  <div class="row-fluid">
    <% if can? :manage, @project %>
      <%= render 'projects/form_action', project: @project %>
    <% end %>
  </div>
  <div class="row-fluid">
    <div class="span3">
      <% if @project.actualities.any? %>
        <div class="graybox">
          <h2><%= t('.list_actuality') %></h2>
          <% @project.actualities.each do |actuality| %>
            <p>
              <%= link_to actuality.title,
                          project_actuality_path(@project, actuality) %>
              -
              <%= actuality.created_at.strftime('%d/%m/%Y %H:%M') %>
            </p>
          <% end %>
        </div>
      <% end %>
      <div id="notes_index_container">
        <%= render 'notes/index', project: @project %>
      </div>
      <%= render 'notes/new', project: @project %>
    </div>
    <div class="span9">
      <% @project.root_comments.each do |comment| %>
        <%= render comment, item: @project, new_comment: @comment %>
      <% end %>
      <%= render 'comments/new', comment: @comment, item: @project %>
    </div>
  </div>
</div>
