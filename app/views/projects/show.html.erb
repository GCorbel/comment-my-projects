<% page_title(@project) %>
<div id="project">
  <div class="row-fluid">
    <div class="span12">
      <div class="graybox">
        <h1><%= @project %></h1>
        <ul class="nav nav-tabs">
          <% @project.category_projects.each_with_index do 
                      |category_project, index| %>
                      <li <%=raw 'class="active"' if index == 0%>>
              <%= link_to category_project.category,
                          "##{category_project.category}",
                          data: { toggle: 'tab' } %>
            </li>
          <% end %>
        </ul>
        <div class="tab-content">
          <%= render @project.category_projects, project: @project %>
        </div>
      </div>
    </div>
  </div>
  <div class="row-fluid">
    <% if signed_in? && current_user == @project.user %>
      <%= render 'projects/form_action', project: @project %>
    <% end %>
  </div>
  <div class="row-fluid">
    <div class="span3">
      <%= render 'notes/index', project: @project %>
      <%= render 'notes/new', 
                 project: @project,
                 note: @note %>
    </div>
    <div class="span9">
      <%= render @project.root_comments, project: @project %>
      <%= render 'comments/new', comment: @comment, project: @project %>
    </div>
  </div>
</div>
