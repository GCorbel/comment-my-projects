<% page_title(@project) %>
<% page_description(@project.description) %>
<div id="project">
  <%= render @project %>
  <% if can? :manage, @project %>
    <%= render 'projects/form_action', project: @project %>
  <% end %>
  <div class="row-fluid">
    <div class="span3">
      <%= render 'actualities', project: @project %>
      <div id="notes_index_container">
        <%= render 'notes/index', project: @project %>
      </div>
      <%= render 'notes/new', project: @project %>
    </div>
    <div class="span9">
      <%= render partial: 'comments/comment', collection: @project.root_comments,
                 locals: { item: @project, new_comment: @comment } %>
      <%= render 'comments/new', comment: @comment, item: @project %>
    </div>
  </div>
</div>
