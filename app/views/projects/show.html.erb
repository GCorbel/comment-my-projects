<div class="row show-grid">
  <div class="span12">
    <h1><%= @project.title %></h1>
    <ul class="nav nav-tabs">
      <% @project.category_projects.each_with_index do 
                  |category_project, index| %>
        <li <%=raw index == 0 ? 'class="active"' : ''%>>
          <%= link_to category_project.category.label, "##{category_project.category.label}" %>
        </li>
      <% end %>
    </ul>
    <div class="tab-content">
      <%= render @project.category_projects, project: @project %>
      <br/>
    </div>
  </div>
</div>
<% if signed_in? && current_user == @project.user %>
  <%= render 'form_action', project: @project %>
<% end %>
<div class="row show-grid">
  <%= render 'notes/index', project: @project %>
  <%= render 'notes/new', 
             project: @project,
             note: @note,
             categories: @categories %>
</div>
<%= render @project.comments, project: @project %>
<%= render 'comments/new', comment: @comment, project: @project %>
