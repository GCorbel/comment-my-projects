<% @project.category_projects.each do |category_project| %>
  <%= category_project.description %>
<% end %>
<% if signed_in? %>
  <div class="form-actions">
    <%= link_to('Ajouter une categorie',
                new_project_category_projects_path(@project),
                class: 'btn') %>
    <%= link_to "Modifier", edit_project_path(@project), class: 'btn' %>
    <%= link_to "Supprimer",
                project_path(@project),
                method: 'delete',
                confirm: 'Êtes vous sûr?',
                class: 'btn btn-danger' %>
  </div>
<% end %>
